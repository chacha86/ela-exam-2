{
  "analysis": {
    "analyzer": {
      "korean_index_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer_mixed",
        "filter": [
          "lowercase",
          "nori_part_of_speech"
        ]
      },
      "korean_search_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer_discard",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "synonym_graph_filter"
        ]
      }
    },
    "tokenizer": {
      "nori_tokenizer_mixed": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      },
      "nori_tokenizer_discard": {
        "type": "nori_tokenizer",
        "decompound_mode": "discard"
      }
    },
    "filter": {
      "synonym_graph_filter": {
        "type": "synonym_graph",
        "synonyms": [
          "맥북, macbook, 맥북프로, macbook pro",
          "핸드폰, 스마트폰, 휴대폰"
        ]
      }
    }
  }
}